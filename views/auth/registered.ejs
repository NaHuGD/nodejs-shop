<%- include('../includes/header.ejs')%>

<form class="registered-form" action="/registered" method="post">
  <%- include('../includes/errorMsg.ejs')%>
  
  <div class="form-group">
    <label for="email">會員email </label>
    <input
      type="text"
      class="form-control"
      id="email"
      name="email"
      aria-describedby="emailHelp"
    />
    <small id="emailHelp" class="form-text text-muted">请输入會員email</small>
  </div>

  <div class="form-group">
    <label for="password">會員密碼</label>
    <input
      type="password"
      class="form-control"
      id="password"
      name="password"
      aria-describedby="passwordHelp"
    />
    <small id="passwordHelp" class="form-text text-muted">请输入會員密碼</small>
  </div>

  <div class="form-group">
    <label for="confirmPassword">確認密碼 </label>
    <input type="text" 
    class="form-control" id="confirmPassword" />
    <small id="confirmPasswordHelp" class="form-text text-muted"
      >請再次確認密碼</small
    >
  </div>
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <button type="submit" class="btn btn-primary">註冊</button>
</form>
<%- include('../includes/footer.ejs')%>
