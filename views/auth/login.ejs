<%- include('../includes/header.ejs')%>

  <form class="login-form" action="/login" method="post" novalidate>
    <%- include('../includes/errorMessage.ejs')%>

      <div class="form-group">
        <label for="email">會員email </label>
        <input type="text" class="form-control <%= validationErrors.find(e=>e.param === 'email') ? 'is-invalid' : '' %>"
          name="email" type="email" required value="<%= oldInput.email %>" />
        <small id="titleHelp" class="form-text text-muted">请输入會員email</small>
      </div>

      <div class="form-group">
        <label for="password">會員密碼 </label>
        <input type="text"
          class="form-control <%= validationErrors.find(e=>e.param === 'password') ? 'is-invalid' : '' %>"
          name="password" type="password" required value="<%= oldInput.password %>" />
        <small id="password" class="form-text text-muted">请输入會員密碼</small>
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button type="submit" class="btn btn-primary">登入</button>
      <a href="/reset" class="btn btn-warning">重置密碼</a>
  </form>
  <%- include('../includes/footer.ejs')%>