<%- include('../includes/header.ejs')%>

<h1>订单管理</h1>
<% if(orders.length>0){ %>

<ul class="list-group">

    <% orders.forEach(function(order){%>
    <li class="list-group-item active">
        <%= order._id %>

        <% order.products.forEach(function(p){ %>
    <li class="list-group-item">
        <%= p.product.title %>
        <%= p.quantity %>
    </li>
    <%})%>

    </li>
    <%})%>

</ul>

<% } else{ %>
<h5>暂无订单内容</h5>
<% } %>

